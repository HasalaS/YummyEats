<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.main.PlaceholderFragment"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/customerimg"/>

            <TextView
                android:textAlignment="center"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ext messaging, or texting, is the act"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:hint="Name"
                android:textSize="@dimen/text_level_3"/>

            <EditText
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:hint="Mobile"
                android:textSize="@dimen/text_level_3"/>

            <EditText
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:hint="Email"
                android:textSize="@dimen/text_level_3"/>



            <LinearLayout
                android:layout_marginVertical="@dimen/nav_header_vertical_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="@dimen/text_level_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_secondary_style"
                    android:textColor="@color/colorAccent"
                    android:text="SignIn"
                    android:layout_marginRight="2dp"/>

                <Button
                    android:textSize="@dimen/text_level_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_primary_style"
                    android:textColor="@color/colorPrimary"
                    android:text="SignUp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>

